<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/todo_note_backgroundcolor"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="@color/todo_note_backgroundcolor">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_gray"
            android:text="@string/todo_message_title"
            android:layout_margin="15dp"
            android:textSize="15sp"
            android:id="@+id/watch_todo_content" />

        <TextView
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/watch_todo_content"
            android:layout_alignParentBottom="true"
            android:text="@string/nobody"
            android:textColor="@color/theme_gray"
            android:textSize="15sp"
            android:id="@+id/watch_todo_createtime"/>

    </RelativeLayout>
</LinearLayout>