<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/todo_note_backgroundcolor"
    android:id="@+id/todo_note_item"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:layout_margin="4dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/todo_note_line"
            android:id="@+id/view" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:textSize="15sp"
                android:layout_weight="1"
                android:textColor="@color/theme_gray"
                android:id="@+id/todo_title"
                android:textStyle="bold"
                android:padding="6dp"/>


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/todo_isfinsh_icon"
                android:padding="6dp"
                android:src="@mipmap/icon_timer"
                android:layout_gravity="end|top" />

        </LinearLayout>

        <TextView
            android:id="@+id/todo_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|end"
            android:text="CreateTime"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/theme_gray"
            android:textSize="11sp" />

</RelativeLayout>




